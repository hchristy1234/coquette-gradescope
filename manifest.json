{
  "manifest_version": 3,
  "name": "Greatscope",
  "description": "Make Gradescope great again!",
  "version": "1.0",
  "icons": {
    "16": "bow-gradescope.png",
    "32": "bow-gradescope.png",
    "48": "bow-gradescope.png",
    "128": "bow-gradescope.png"
  },

  "content_scripts": [
  {
    "matches": ["*://www.gradescope.com/*"],
    "js": ["canvas-confetti.min.js","content.js"],
    "css": ["styles.css"]
  }
  ],
  "action": {
      "default_icon": {
        "16": "bow-gradescope.png",
        "32": "bow-gradescope.png",
        "48": "bow-gradescope.png",
        "128": "bow-gradescope.png"
      }
  },
  "permissions": ["activeTab", "scripting"]
}
